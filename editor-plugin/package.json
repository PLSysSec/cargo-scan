{
  "name": "cargo-scan",
  "displayName": "cargo-scan",
  "description": "",
  "publisher": "PLSysSec",
  "version": "0.0.1",
  "license":"MIT",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "url": "https://github.com/PLSysSec/cargo-scan",
    "type": "git"
  },
  "activationEvents": [
    "workspaceContains:Cargo.toml",
    "workspaceContains:*/Cargo.toml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cargo-scan.scan",
        "title": "Scan Crate",
        "category": "cargo-scan"
      },
      {
        "command": "cargo-scan.audit",
        "title": "Audit Crate",
        "category": "cargo-scan"
      },
      {
        "command": "cargo-scan.create_chain",
        "title": "Create Chain",
        "category": "cargo-scan"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "effectsView",
          "name": "Effects"
        }
      ]
    }
  },
  "configuration": {
    "type": "object",
    "title": "Cargo Scan",
    "properties": {
      "cargo-scan.serverPath": {
        "type": "string",
        "default": "./out/lang_server",
        "description": "Path to 'cargo-scan' executable"
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build-debug": "esbuild ./src/extension.ts --bundle --outdir=./out/ --external:vscode --format=cjs --platform=node",
    "build-release": "npm run build-debug -- --minify",
    "clean": "rm -rf ./out",
    "package": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^2.31.0",
    "esbuild": "^0.23.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  }
}
